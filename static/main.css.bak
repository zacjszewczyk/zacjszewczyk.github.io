a { text-decoration: none; color: #518341; }
a:hover { color: #C99199 }
article>p { margin: 25px 0 }
.article_title { text-align: center }
#blog main article, #postarchives main article, header article { margin: 100px 0 }
#big_table { width: 100%; padding: 20pt 0; }
#big_table tr td { text-align: center; padding: 20pt; font-size: 200%; }
body { background-color: #F6F6F6; font-family: "Roboto"; font-size: 12pt; line-height: 200%; opacity: 0.8; }
div.flash:first-of-type { margin-top: 25px }
div.flash { font-size: 12pt; color: #C99199; }
#fn1 { border-top: 1px dashed gray; margin-top: 50pt; padding-top: 25pt; }
.footnote { margin: 50px 0 }
.footnote>p { text-align: left !important; font-size: 11pt; }
.footnote>p:last-of-type { display: inline }
.frame { display: none; width: 1280px; height: 786px; border: 0; -ms-transform: scale(0.75); -moz-transform: scale(0.75); -o-transform: scale(0.75); -webkit-transform: scale(0.75); transform: scale(0.75); -ms-transform-origin: 0 0; -moz-transform-origin: 0 0; -o-transform-origin: 0 0; -webkit-transform-origin: 0 0; transform-origin: 0 0; }
h1 { text-align: right; margin: 50px 0; }
header { min-height: 100px }
#home #home_link, #blog #blog_link, #projects #projects_link, #newcustomers #new_customers_link, #login #customers_link, #loggedin #customers_link, #postarchives #archives_link { text-decoration: underline }
#home #rss_link, #home #archives_link, #projects #rss_link, #projects #archives_link, #newcustomers #rss_link, #newcustomers #archives_link, #existingcustomers #rss_link, #existingcustomers #archives_link, #loggedin #rss_link, #loggedin #archives_link, #logout #rss_link, #logout #archives_link { display: none }
hr { margin: 50px auto; width: 50%; border: 0; border-bottom: 1px dashed #ccc; background: #999; }
html, body { margin: 0; padding: 0; }
.iframe { text-align: center }
.image { text-align: center }
.image img { max-width: 50em }
.linkpost { color: #8AC178; text-decoration: underline; }
.linkpost:hover { color: #C97D88; cursor: pointer; }
main, header { width: 55em; min-width: 500px; padding: 0 10px; margin: 0 auto; margin-bottom: 100px; }
main article>time { margin: -15px 0; text-align: center; font-size: 90%; display: block; }
nav { text-align: center; margin: 150px 0; font-size: 15pt; }
nav a, #rotate_nav a { margin: 0 20px }
.original { color: #255515 }
.original:hover { color: #934953; cursor: pointer; }
.wrap { min-width: 500px; width: 960px; height: auto; padding: 0; }
